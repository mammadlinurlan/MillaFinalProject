                                    <img style="height:52px;width:40px" src="~/assets/images/products/@item.Product.ProductSizeColors.FirstOrDefault(p=>p.ProductId == item.ProductId && p.ColorId == item.ColorId).MainImage" alt="product desc">
                                </a>



                                @foreach (var prd in item.Product.ProductColors.Where(p => p.ProductId == item.ProductId && p.ColorId != item.ColorId))
                                {


                                    <a href="#" class="active">
                                        <img style="height:52px;width:40px" src="~/assets/images/products/@item.Product.ProductSizeColors.FirstOrDefault(p=>p.ProductId == prd.ProductId && p.ColorId == prd.ColorId).MainImage" alt="product desc">

