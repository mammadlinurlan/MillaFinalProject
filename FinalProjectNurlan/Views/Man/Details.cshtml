@model ShopVM

    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container d-flex align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="man" asp-action="index">Man</a></li>

                <li class="breadcrumb-item"><a asp-controller="man" asp-action="shop" asp-route-id="@Model.ProductSizeColor.Product.CategoryId">@Model.ProductSizeColor.Product.Category.Name</a></li>

            </ol>


        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container">
            <div class="product-details-top">
                <div class="row">
                    <div class="col-md-6">
                        <div class="product-gallery product-gallery-vertical">
                            <div class="row">
                                <figure class="product-main-image">
                                    <img style="height: 457px; object-fit: cover;" class="product-zoom" src="~/assets/images/products/@Model.ProductSizeColor.MainImage"  alt="product image">

                                    <a data-toggle="modal" data-target="#exampleModalCenter" style="cursor:pointer" id="btn-product-gallery" class="btn-product-gallery">
                                        <i class="icon-arrows"></i>
                                    </a>
                                   
                                </figure>

                                <div id="product-zoom-gallery" class="product-image-gallery">
                                    <a style="width:106px;height:106px!important" class="product-gallery-item active changeable" href="#" data-image="~/assets/images/products/@Model.ProductSizeColor.MainImage" data-zoom-image="~/assets/images/products/@Model.ProductSizeColor.MainImage">
                                        <img style="width:106px;height:106px!important;object-fit:cover" src="~/assets/images/products/@Model.ProductSizeColor.MainImage" alt="product side">
                                    </a>

                                    @foreach (var item in Model.ProductSizeColor.ProductImages)
                                    {
                                        <a style="width:106px;height:106px!important" class="product-gallery-item changeable" href="#" data-image="~/assets/images/products/@item.Image" data-zoom-image="~/assets/images/products/@item.Image">
                                            <img style="width:106px;height:106px!important;object-fit:cover" src="~/assets/images/products/@item.Image" alt="product back">
                                        </a>
                                    }



                                </div><!-- End .product-image-gallery -->
                            </div><!-- End .row -->
                        </div><!-- End .product-gallery -->
                    </div><!-- End .col-md-6 -->

                    <div class="col-md-6">
                        <div class="product-details">
                            <h1 class="product-title">@Model.ProductSizeColor.Product.Name.ToUpper()</h1><!-- End .product-title -->

                            <div class="ratings-container">
                                <div class="ratings">
                                    <div class="ratings-val" style="width: 80%;"></div><!-- End .ratings-val -->
                                </div><!-- End .ratings -->
                                <a class="ratings-text" href="#product-review-link" id="review-link">( 2 Reviews )</a>
                            </div><!-- End .rating-container -->

                            <div class="product-price">
                                @if (Model.ProductSizeColor.Product.Discount != null && Model.ProductSizeColor.Product.Discount != 0)
                                {
                                    <span class="new-price" style="color: #c96">@((Model.ProductSizeColor.Product.Price - (Model.ProductSizeColor.Product.Price * Model.ProductSizeColor.Product.Discount / 100) ) )$ </span> <span class="old-price" style="text-decoration:line-through">was @Model.ProductSizeColor.Product.Price$</span>

                                }
                                else
                                {
                                    <span style="color: #c96">@Model.ProductSizeColor.Product.Price $</span>
                                }

                            </div><!-- End .product-price -->

                            <div class="product-content">
                                <p>@Model.ProductSizeColor.Product.Subtitle</p>
                            </div><!-- End .product-content -->

                            <div class="details-filter-row details-row-size">
                                <label>Color:</label>

                                <div class="product-nav product-nav-thumbs">
                                    <a class="active">
                                        <img style="height:52px;width:40px;object-fit:cover" src="~/assets/images/products/@Model.ProductSizeColor.MainImage" alt="product desc">
                                    </a>
                                    @foreach (var prd in Model.ProductSizeColor.Product.ProductColors.Where(p => p.ColorId != Model.ProductSizeColor.ColorId))
                                    {
                                        <a asp-controller="man" asp-action="details" asp-route-id="@Model.ProductSizeColor.Product.ProductSizeColors.FirstOrDefault(p=>p.ProductId == prd.ProductId && p.ColorId == prd.ColorId).Id">
                                            <img style="height:52px;width:40px;object-fit:cover" src="~/assets/images/products/@Model.ProductSizeColor.Product.ProductSizeColors.FirstOrDefault(p=>p.ProductId == prd.ProductId && p.ColorId == prd.ColorId).MainImage" alt="product desc">

                                        </a>
                                    }
                                </div><!-- End .product-nav -->
                            </div><!-- End .details-filter-row -->

                            <div class="details-filter-row details-row-size">
                                <label for="size">Size:</label>
                                <div class="select-custom">
                                    <select name="size" id="size" class="form-control">
                                        <option value="0">Select size</option>
                                        @foreach (var item in Model.ProductSizeColor.Product.ProductSizeColors.Where(p => p.ColorId == Model.ProductSizeColor.ColorId))
                                        {
                                            @if (item.TotalStock < 5)
                                            {
                                                <option style="color:grey" disabled value="@item.Size.Name">@item.Size.Name </option>

                                            }
                                            else
                                            {
                                                <option style="color:black" value="@item.Size.Name">@item.Size.Name</option>

                                            }



                                        }


                                    </select>
                                </div><!-- End .select-custom -->

                                <a href="#" class="size-guide"><i class="icon-th-list"></i>size guide</a>
                            </div><!-- End .details-filter-row -->

                            <div class="details-filter-row details-row-size">
                                <label for="qty">Qty:</label>
                                <div class="product-details-quantity">
                                    <input type="number" id="qty" class="form-control" value="1" min="1" max="10" step="1" data-decimals="0" required>
                                </div><!-- End .product-details-quantity -->
                            </div><!-- End .details-filter-row -->

                            <div class="product-details-action">
                                <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>

                                <div class="details-action-wrapper">
                                    <a href="#" class="btn-product btn-wishlist" title="Wishlist"><span>Add to Wishlist</span></a>
                                    <a href="#" class="btn-product btn-compare" title="Compare"><span>Add to Compare</span></a>
                                </div><!-- End .details-action-wrapper -->
                            </div><!-- End .product-details-action -->

                            <div class="product-details-footer">
                                <div class="product-cat">
                                    <span>Category:</span>
                                    <a asp-controller="man" asp-action="shop" asp-route-id="@Model.ProductSizeColor.Product.CategoryId">@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.ProductSizeColor.Product.Category.Name.ToLower())    </a>
                                </div><!-- End .product-cat -->

                                <div class="social-icons social-icons-sm">
                                    <span class="social-label">Share:</span>
                                    <a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
                                    <a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                                    <a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
                                    <a href="#" class="social-icon" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
                                </div>
                            </div><!-- End .product-details-footer -->
                        </div><!-- End .product-details -->
                    </div><!-- End .col-md-6 -->
                </div><!-- End .row -->
            </div><!-- End .product-details-top -->

            <div class="product-details-tab">
